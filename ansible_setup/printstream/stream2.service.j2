[Unit]
Description=Kamerastream

[Service]
Type=simple
Restart=always
User=root
Environment=LD_LIBRARY_PATH={{full_path}}
ExecStart={{full_path}}/mjpg_streamer -o "output_http.so -p 8081 -w {{full_path}}/www" -i "input_uvc.so -d /dev/video2" > /tmp/log2.txt 2>&1


[Install]
WantedBy=multi-user.target
