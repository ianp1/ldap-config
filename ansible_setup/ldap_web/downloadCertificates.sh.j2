#!/bin/bash
# Do not edit this file directly! It is created by ansible tasks and will likely
# be overriden soon!
{% for domain in domains %}
{% if domain.certificate %}
mkdir /etc/ssl/{{ domain.domain }}
chmod 640 /etc/ssl/{{ domain.domain }}
scp -i /root/.ssh/id_certificates -r certificates@fablab-luebeck.de:/etc/letsencrypt/live/{{ domain.domain }}/* /etc/ssl/{{ domain.domain }}/
{% endif %}
{% endfor %}

scp -i /root/.ssh/id_certificates certificates@fablab-luebeck.de:/etc/letsencrypt/options-ssl-apache.conf /etc/ssl/
/usr/sbin/service apache2 restart
